{% extends 'auth/base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">Connexion</h1>
    </div>

    {% if error is not null %}
    <div class="alert alert-danger">
        {{ error.message }}
    </div>
    {% endif %}

    <form class="user" method="post">
        <input type="hidden" name="_csrf_token" id="_csrf_token" value="{{ csrf_token('authenticate') }}" />
        <div class="form-group">
            <input type="text" value="{{ last_username }}" name="nickname" id="nickname" class="form-control form-control-user" required autofocus placeholder="Pseudo" />
        </div>
        <div class="form-group">
            <input type="password" name="password" id="password" class="form-control form-control-user" required placeholder="Mot de passe" />
        </div>
        <div class="form-group">
            <div class="custom-control custom-checkbox small">
                <input type="checkbox" class="custom-control-input" id="_remember_me" name="_remember_me">
                <label class="custom-control-label" for="_remember_me">Se souvenir de moi</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-user btn-block">
            Me connecter
        </button>
    </form>

    <hr>

    <div class="text-center">
        <a class="small" href="#">Mot de passe oubli√© ?</a>
    </div>
{% endblock %}
