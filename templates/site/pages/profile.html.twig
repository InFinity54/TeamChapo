{% extends "site/base.html.twig" %}

{% block title %}Profil{% endblock %}

{% block css %}
    <link rel="stylesheet" type="text/css" href="{{ asset("vendor/dropify/css/dropify.min.css") }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset("css/forms.css") }}" />
{% endblock %}

{% block js %}
    <script type="text/javascript" src="{{ asset("vendor/jquery-validate/jquery.validate.min.js") }}"></script>
    <script type="text/javascript" src="{{ asset("vendor/jquery-validate/localization/messages_fr.min.js") }}"></script>
    <script type="text/javascript" src="{{ asset("vendor/dropify/js/dropify.min.js") }}"></script>
    <script type="text/javascript" src="{{ asset("js/pages/profile.js") }}"></script>
{% endblock %}

{% block body %}
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Profil</h1>
        <a href="{{ path("profile_password") }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-key fa-sm"></i> Modifier le mot de passe</a>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Informations de base</h6>
                </div>
                <div class="card-body">
                    <form id="profile-form" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <label for="nickname">Pseudo</label>
                                <input type="text" class="form-control" id="nickname" name="nickname" readonly value="{{ user.nickname }}" />
                            </div>
                            <div class="col-sm-12 col-md-6 mt-sm-5 mt-md-0">
                                <label for="email">Adresse e-mail</label>
                                <input type="email" class="form-control" id="email" name="email" required value="{{ user.email }}" />
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class="col-sm-12">
                                <label for="picture">Photo</label>
                                <input type="file" name="picture" id="picture" data-default-file="{{ asset("img/avatars/" ~ user.picture) }}" data-min-width="100%" data-max-width="100%" data-height="350" data-allowed-file-extensions="jpg jpeg gif png" />
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-primary btn-block">Enregistrer les modifications</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}